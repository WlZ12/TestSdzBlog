{% extends "@SdzBlog/layout.html.twig" %}
{% block title %}
    Accueil - {{ parent() }}
{% endblock %}
{% block sdzblog_body %}
    <h2>Liste des articles</h2>

    <ul>
        {% for article in articles %}
            <li>
                <a href="{{ path('sdzblog_voir',{'id': article.id}) }}">{{ article.titre }}</a>
                par {{ article.auteur }}
                le {{ article.date|date('d/m/Y') }}
            </li>
        {% else %}
            <li>
                Pas (encore !) d'articles
            </li>
        {% endfor %}
    </ul>
    <a onclick="calcule()">dfqsfq</a>
    <script>

        var s=0;
        function calcule() {
            var nb=1000;
            for(i=1;i<=nb;i++) {
                a$=i.toString();
                for(j=0;j<a$.length;j++) {
                    if (a$.charAt(j)=="0") {
                        s++;
                    }
                }
            }
            console.log(s);
        }
    </script>
{% endblock %}


